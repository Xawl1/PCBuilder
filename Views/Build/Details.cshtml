@model PCBuilder.Models.Build

@{
    ViewData["Title"] = Model.BuildName;
    var total = Model.BuildItems.Sum(i => i.Quantity * i.Product.Price);
}

<div class="build-details-container">
    <h1>@Model.BuildName</h1>

    <p class="text-muted">
        Created: @Model.CreatedAt.ToString("MMMM dd, yyyy")
        @if (Model.UpdatedAt.HasValue)
        {
            <text> | Last updated: @Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")</text>
        }
    </p>

    @if (!Model.BuildItems.Any())
    {
        <div class="alert-warning">
            This build is empty. <a asp-controller="Products" asp-action="Index">Browse products</a> to add parts!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Part</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BuildItems)
                    {
                        <tr>
                            <td>@item.Product.Brand @item.Product.ModelName</td>
                            <td>@item.Product.Category?.CategoryName</td>
                            <td>$@item.Product.Price.ToString("0.00")</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post">
                                    <input type="hidden" name="buildItemId" value="@item.Id" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                </form>
                            </td>
                            <td>$@((item.Quantity * item.Product.Price).ToString("0.00"))</td>
                            <td>
                                <form asp-action="RemoveFromBuild" method="post">
                                    <input type="hidden" name="buildItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="4" class="text-end">Total:</th>
                        <th>$@total.ToString("0.00")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Builds</a>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Add More Parts</a>
    </div>
</div>