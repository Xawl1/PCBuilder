@model IEnumerable<PCBuilder.Models.Product>
@using System.IO

@{
    ViewData["Title"] = "Products";
    
    string GetBrandImage(string brand)
    {
        string brandLower = brand?.ToLower() ?? "";
        
        return brandLower switch
        {
            "intel" => "/images/brands/intel.png",
            "amd" => "/images/brands/amd.png",
            "nvidia" => "/images/brands/nvidia.png",
            "corsair" => "/images/brands/corsair.png",
            "msi" => "/images/brands/msi.png",
            "asus" => "/images/brands/asus.png",
            "gigabyte" => "/images/brands/gigabyte.png",
            "evga" => "/images/brands/evga.png",
            "kingston" => "/images/brands/kingston.png",
            "samsung" => "/images/brands/samsung.png",
            "seagate" => "/images/brands/seagate.png",
            "wd" => "/images/brands/wd.png",
            "western digital" => "/images/brands/wd.png",
            "crucial" => "/images/brands/crucial.png",
            _ => "/images/brands/default.png"
        };
    }
    
}

<h1>PC Parts</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Category Filter Buttons -->
<div class="mb-3">
    <strong>Categories:</strong>
    <a asp-action="Index" asp-route-categoryId="" asp-route-tier="@ViewBag.SelectedTier" asp-route-brand="@ViewBag.SelectedBrand" asp-route-sortOrder="@ViewBag.CurrentSort"
       class="btn @(ViewBag.SelectedCategory == null ? "btn-primary" : "btn-outline-primary") btn-sm">All</a>
    
    @foreach (var category in ViewBag.Categories)
    {
        <a asp-action="Index" asp-route-categoryId="@category.Id" asp-route-tier="@ViewBag.SelectedTier" asp-route-brand="@ViewBag.SelectedBrand" asp-route-sortOrder="@ViewBag.CurrentSort"
               class="btn @(ViewBag.SelectedCategory == category.Id ? "btn-primary" : "btn-outline-primary") btn-sm">
            @category.CategoryName
        </a>
    }
</div>

<!-- Tier Filter Buttons -->
<div class="mb-3">
    <strong>Tiers:</strong>
    <a asp-action="Index" asp-route-tier="" asp-route-categoryId="@ViewBag.SelectedCategory" asp-route-brand="@ViewBag.SelectedBrand" asp-route-sortOrder="@ViewBag.CurrentSort"
       class="btn @(ViewBag.SelectedTier == null ? "btn-secondary" : "btn-outline-secondary") btn-sm">All</a>
    <a asp-action="Index" asp-route-tier="1" asp-route-categoryId="@ViewBag.SelectedCategory" asp-route-brand="@ViewBag.SelectedBrand" asp-route-sortOrder="@ViewBag.CurrentSort"
       class="btn @(ViewBag.SelectedTier == 1 ? "btn-secondary" : "btn-outline-secondary") btn-sm">Tier 1 (Budget)</a>
    <a asp-action="Index" asp-route-tier="2" asp-route-categoryId="@ViewBag.SelectedCategory" asp-route-brand="@ViewBag.SelectedBrand" asp-route-sortOrder="@ViewBag.CurrentSort"
       class="btn @(ViewBag.SelectedTier == 2 ? "btn-secondary" : "btn-outline-secondary") btn-sm">Tier 2 (Mid-Range)</a>
    <a asp-action="Index" asp-route-tier="3" asp-route-categoryId="@ViewBag.SelectedCategory" asp-route-brand="@ViewBag.SelectedBrand" asp-route-sortOrder="@ViewBag.CurrentSort"
       class="btn @(ViewBag.SelectedTier == 3 ? "btn-secondary" : "btn-outline-secondary") btn-sm">Tier 3 (High-End)</a>
</div>

<!-- Brand Filter Dropdown -->
<div class="mb-3 d-flex align-items-center">
    <strong class="me-2">Brand:</strong>
    <select class="form-select form-select-sm w-auto"
            onchange="window.location.href = '@Url.Action("Index")?brand=' + this.value +
        '&categoryId=@ViewBag.SelectedCategory&tier=@ViewBag.SelectedTier&sortOrder=@ViewBag.CurrentSort'">
        
        <option value="">All Brands (@ViewBag.TotalProducts)</option>
        
        @foreach (var brandItem in ViewBag.Brands)
        {
            <option value="@brandItem.Brand" selected="@(ViewBag.SelectedBrand == brandItem.Brand ? "selected" : null)">
                @brandItem.Brand (@brandItem.Count)
            </option>
        }
    </select>
    
    @if (!string.IsNullOrEmpty(ViewBag.SelectedBrand))
    {
        <a asp-action="Index" asp-route-categoryId="@ViewBag.SelectedCategory" asp-route-tier="@ViewBag.SelectedTier" asp-route-sortOrder="@ViewBag.CurrentSort"
           class="btn btn-sm btn-outline-danger ms-3">Clear Brand</a>
    }
</div>
<!-- Sort Options - Single Toggle Button -->
<div class="mb-3 d-flex align-items-center">
    <strong class="me-2">Sort by:</strong>
    
    @{
        string nextSort = ViewBag.CurrentSort == "price_asc" ? "price_desc" : "price_asc";
        string buttonText = ViewBag.CurrentSort == "price_desc" ? "Price: High to Low ↓" : "Price: Low to High ↑";
    }
    
    <a asp-action="Index" asp-route-sortOrder="@nextSort"
           asp-route-categoryId="@ViewBag.SelectedCategory"
           asp-route-tier="@ViewBag.SelectedTier"
           asp-route-brand="@ViewBag.SelectedBrand"
           asp-route-page="1"
           class="btn btn-info btn-sm">
        @buttonText
    </a>
    
    @if (!string.IsNullOrEmpty(ViewBag.CurrentSort))
    {
        <a asp-action="Index" asp-route-sortOrder=""
           asp-route-categoryId="@ViewBag.SelectedCategory"
           asp-route-tier="@ViewBag.SelectedTier"
           asp-route-brand="@ViewBag.SelectedBrand"
           asp-route-page="1"
           class="btn btn-sm btn-outline-secondary ms-2">Clear Sort</a>
    }
</div>
<div class="mb-2 text-muted">
    Showing @Model.Count() of @ViewBag.TotalItems products
</div>
<!-- Products Grid -->
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <!-- Brand Image -->
                <div class="text-center p-3" style="height: 120px; display: flex; align-items: center; justify-content: center;">
                    <img src="@GetBrandImage(product.Brand)"
                         alt="@product.Brand"
                         style="max-height: 80px; max-width: 100%; object-fit: contain;"
                         onerror="this.onerror=null; this.src='/images/brands/default.png';">
                </div>
                
                <div class="card-body">
                    <h5 class="card-title">@product.Brand @product.ModelName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@product.Category?.CategoryName</h6>
                    <p class="card-text">
                        <strong>Price:</strong> $@product.Price.ToString("0.00")<br />
                        <strong>Tier:</strong> @product.Tier/3
                    </p>
                    
                    <form asp-controller="Build" asp-action="AddToBuild" method="post">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-cart-plus"></i> Add to Build
                        </button>
                    </form>
                </div>
                <!-- Tier badge -->
                <div class="mb-2">
                    @if (product.Tier == 1)
                    {
                        <span class="badge" style="background: #00ff8844; color: #00ff88; border: 1px solid #00ff88;">Budget Build</span>
                    }
                    else if (product.Tier == 2)
                    {
                        <span class="badge" style="background: #00f0ff44; color: #00f0ff; border: 1px solid #00f0ff;">Mid-Range</span>
                    }
                    else if (product.Tier == 3)
                    {
                        <span class="badge" style="background: #ff336644; color: #ff3366; border: 1px solid #ff3366;">High-End</span>
                    }
                </div>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-categoryId="@ViewBag.SelectedCategory"
                   asp-route-tier="@ViewBag.SelectedTier"
                   asp-route-brand="@ViewBag.SelectedBrand"
                   asp-route-sortOrder="@ViewBag.CurrentSort">Previous</a>
            </li>
            
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@i"
                       asp-route-categoryId="@ViewBag.SelectedCategory"
                       asp-route-tier="@ViewBag.SelectedTier"
                       asp-route-brand="@ViewBag.SelectedBrand"
                       asp-route-sortOrder="@ViewBag.CurrentSort">@i</a>
                </li>
            }
            
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-categoryId="@ViewBag.SelectedCategory"
                   asp-route-tier="@ViewBag.SelectedTier"
                   asp-route-brand="@ViewBag.SelectedBrand"
                   asp-route-sortOrder="@ViewBag.CurrentSort">Next</a>
            </li>
        </ul>
    </nav>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No products found with these filters.
    </div>
}