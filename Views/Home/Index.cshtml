@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to PCBuilder</h1>
    <p class="lead">Build your dream PC, part by part.</p>
    
    <div style="margin-top: 3rem;">
        <h2>How it works</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-top: 2rem;">
            <div>
                <h3>1. Browse Parts</h3>
                <p>Choose from CPUs, GPUs, RAM, and more. Filter by category, brand, or tier.</p>
            </div>
            <div>
                <h3>2. Create Builds</h3>
                <p>Add parts to your build. Create multiple builds for different budgets.</p>
            </div>
            <div>
                <h3>3. Check Compatibility</h3>
                <p>Our tier system ensures your parts work together - budget, mid-range, or high-end.</p>
            </div>
        </div>
    </div>
    
    <div style="margin-top: 4rem; color: var(--text-secondary);">
        <p>Already have a build? Use the menu above to view your builds.</p>
    </div>
</div>